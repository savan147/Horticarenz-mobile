<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:theme="@android:style/Theme.Translucent"
    android:gravity="left"
    android:padding="1dp"
    android:background="@drawable/bg_main">

    <ScrollView android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:paddingStart="5dp"
        android:layout_alignParentRight="false"
        android:paddingEnd="5dp"
        android:layout_gravity="bottom"
        android:padding="2dp"
        android:background="@drawable/bg_main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/txtName"
                android:gravity="left|center_vertical|center_horizontal"
                android:capitalize="words"
                android:layout_alignParentTop="true"
                android:layout_gravity="top|left|center_vertical"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#3447ff"
                android:hint="Recipe Name"
                android:maxLength="60"
                android:padding="2dp"
                android:background="#e1ecff" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="by Chris Ramirez"
                android:id="@+id/txtAuthor"
                android:gravity="left"
                android:capitalize="words"
                android:layout_alignParentTop="true"
                android:layout_gravity="top|left|center_vertical"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#3447ff" />

            <ImageView android:id="@+id/ImageView01"
                android:layout_width="match_parent" android:layout_height="150dp"
                android:layout_gravity="center_horizontal|top"
                android:src="@drawable/def"
                android:background="#fffded" />

            <TextView android:text="" android:id="@+id/txt5"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:textSize="14dp"
                android:hint="Description"
                android:textColor="@color/black"
                android:padding="2dp"
                android:textStyle="bold"
                android:background="@android:color/darker_gray"
                android:gravity="left|center" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#e1ecff">

                    <TextView android:text="" android:id="@+id/txtDesc"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:hint="Description"
                        android:textColor="@color/black"
                        android:gravity="top"
                        android:typeface="normal"
                        android:elegantTextHeight="false"
                        android:capitalize="sentences"
                        android:padding="2dp" />
                </LinearLayout>
                <TextView android:text="" android:id="@+id/txt3"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:hint="Ingredients"
                    android:textColor="@color/black"
                    android:padding="2dp"
                    android:textStyle="bold"
                    android:background="@android:color/darker_gray"
                    android:gravity="left|center" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF">

                    <TextView android:text="" android:id="@+id/txtIngredients"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:hint="Ingredients"
                        android:textColor="@color/black"
                        android:gravity="top"
                        android:typeface="normal"
                        android:elegantTextHeight="false"
                        android:capitalize="sentences"
                        android:maxLength="1500"
                        android:autoText="false"
                        android:padding="2dp" />
                </LinearLayout>
                <TextView android:text="" android:id="@+id/txt4"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:hint="Procedure"
                    android:textColor="@color/black"
                    android:padding="2dp"
                    android:textStyle="bold"
                    android:background="@android:color/darker_gray"
                    android:gravity="left|center" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#e1ecff">

                    <TextView android:text="" android:id="@+id/txtSteps"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:hint="Procedure"
                        android:textColor="@color/black"
                        android:gravity="top"
                        android:typeface="normal"
                        android:elegantTextHeight="false"
                        android:capitalize="sentences"
                        android:maxLength="1500"
                        android:padding="2dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="15.38">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:visibility="invisible"
            android:layout_gravity="right"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentEnd="false" />

    </RelativeLayout>

</RelativeLayout>
